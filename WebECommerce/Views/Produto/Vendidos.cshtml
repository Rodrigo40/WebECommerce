@using System.Globalization;
<br/>
<br/>
<br/>
<br/>
<section class="section-products">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h2>Produtos vendidos</h2>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <!-- Listagem de Produtos -->
            @foreach (var pg in WebECommerce.Models.PagamentosModel.ListarRelatorioPagamentos())
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div id="product-1" class="single-product">
                        <div class="part-1">
                            <img src="~/imagens/@pg.Imagem" style="width:250px; height:200px"/>
                        </div>
                        <div class="part-2">
                            <h3 class="product-title" style="font-size:15px"><kbd>Código do produto: PC00-(@pg.CodigoProduto)</kbd></h3>
                            <h3 class="product-title" style="font-size:15px">Produto: @pg.Produto</h3>
                            <h4 class="product-old-price" style="font-size:15px;color:dodgerblue"><b>Preço: @pg.Preco.ToString("N2",CultureInfo.CurrentCulture) - AKZ</b></h4>
                            <h4 class="product-price" style="font-size:15px">Quantidade: @pg.Quantidade</h4>
                            <h4 class="product-price" style="font-size:15px">Cliente: @pg.Cliente</h4>
                            <h4 class="product-price" style="font-size:15px">TipoPagamento: @pg.TipoPagamento</h4>
                            <h4 class="product-price" style="font-size:15px">Total: @pg.Total.ToString("N2",CultureInfo.CurrentCulture) - AKZ</h4>
                            <h4 class="product-price" style="font-size:15px">DataPagamento: @pg.DataPagamento</h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<br />
<br />
