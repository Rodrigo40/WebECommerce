@{
    ViewData["Title"] = "Perfil";
}
@using WebECommerce.Entity;
@model UsuarioEntity
<br />
<br />
<br />
<br />
<div class="rounded d-flex justify-content-center">
    <div class="col-md-4 col-sm-12 shadow-lg p-7 bg-light">
        <div class="text-center">
            <h3 class="text-primary">Meu perfil</h3>
            <br />
            <br />
        </div>
    </div>
</div>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model.ListaUsuario)
            {
                <tr>
                    <td>@user.Nome</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-info" asp-area="" asp-controller="Usuario" asp-action="Editar" asp-route-id="@user.Id">Editar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

