@{
    ViewData["Title"] = "Listar";
}

@model UsuarioModel
<br />
<br />
<br />
<br />
<br />
<br />
<div>
    <a asp-area="" asp-controller="Usuario" asp-action="Novo" class="btn btn-info">Adicionar usuario</a>
</div>
<br />
<div class="alert alert-primary" style="background-color:#2582C5" role="alert">
    <h2 style="color:white;font-size:25px;text-align:center">Listar Usuario (Total:@Model.ListarUsuarios().Count)</h2>
</div>

<table id="resultGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <td><b>Id</b></td>
            <td><b>Nome<b /></td>
            <td><b>Email</b></td>
            <td><b>Açôes<b /></td>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var item in Model.ListarUsuarios())
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Nome</th>
                    <th>@item.Email</th>
                    <th>
                        <a class="btn btn-primary" style="background-color:#116097" asp-area="" asp-action="EditarUsuario" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-primary" style="background-color: darkred" asp-area="" asp-action="EliminarUsuario" asp-route-id="@item.Id">Eliminar</a>

                    </th>
                </tr>
            }
        }


    </tbody>
</table>