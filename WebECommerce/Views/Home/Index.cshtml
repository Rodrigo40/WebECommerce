@using System.Globalization;
@{
    ViewData["Title"] = "Home Page";
}

<section id="billboard" class="position-relative overflow-hidden bg-light-blue">
    <div class="swiper main-swiper">
        <div class="swiper-wrapper" style="margin:90px 0px 0px 0px" id="sld1">
            @{
                foreach (var img in ProdutosModel.GetInstacia().ListarProdutos())
                {
                    <div class="swiper-slide" id="sld">
                        <div class="container">
                            <div class="row d-flex align-items-center">
                                <div class="col-md-6">
                                    <div class="banner-content">
                                        <h1 class="display-2 text-uppercase text-dark pb-5">Encontre aqui produtos de qualidade</h1>
                                        <a href="shop.html" class="btn btn-medium btn-dark text-uppercase btn-rounded-none">@img.Nome</a>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="image-holder">
                                        <img src="~/imagens/@img.Imagem" style="width:640px;height:429px; alt="banner">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="swiper-icon swiper-arrow swiper-arrow-prev">
        <svg class="chevron-left">
            <use xlink:href="#chevron-left" />
        </svg>
    </div>
    <div class="swiper-icon swiper-arrow swiper-arrow-next">
        <svg class="chevron-right">
            <use xlink:href="#chevron-right" />
        </svg>
    </div>
</section>
<section id="mobile-products" class="product-store position-relative padding-large no-padding-top">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Produtos</h2>
                <div class="btn-right">
                    <a asp-area="" asp-controller="Produto" asp-action="Lista" class="btn btn-medium btn-normal text-uppercase">Ver todos</a>
                </div>
            </div>
            <div class="swiper product-swiper">
                @{
                    <div class="swiper-wrapper">
                        @foreach (var item in WebECommerce.Models.ProdutosModel.GetInstacia().ListarProdutos())
                        {
                            <div class="swiper-slide">
                                <div class="product-card position-relative">
                                    <div class="image-holder">
                                        <img src="imagens/@item.Imagem" style="max-width: 450px; max-height: 300px" alt="product-item" class="img-fluid" width="250" height="250">
                                    </div>
                                    <div class="cart-concern position-absolute">
                                        <div class="cart-button d-flex">
                                            <a asp-area="" asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-medium btn-black">Comprar<svg class="cart-outline"><use xlink:href="#cart-outline"></use></svg></a>
                                        </div>
                                    </div>
                                    <div class="card-detail d-flex justify-content-between align-items-baseline pt-3">
                                        <h3 class="card-title text-uppercase">
                                            <a href="#">@item.Nome</a>
                                        </h3>
                                        <span id="preco" class="item-price text-primary">@item.Preco.ToString("N2", CultureInfo.CurrentCulture) AKZ</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="swiper-pagination position-absolute text-center"></div>
</section>
<br />
