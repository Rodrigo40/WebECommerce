@{
    ViewData["Title"] = "Novo";
}

<br />
<br />
<br />
<br />
<div class="rounded d-flex justify-content-center">
    <div class="col-md-4 col-sm-12 shadow-lg p-7 bg-light">
        <div class="text-center">
            <h3 class="text-primary">Novo TipoPagamento</h3>
        </div>
        <form action="/TipoPagamento/Novo" method="post" enctype="multipart/form-data">
            <div class="p-4">
                <div class="input-group mb-3">
                    <span class="input-group-text bg-primary">
                        <i class="fa fa-circle-arrow-up text-white"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Nome do tipo" name="tipo" required="required" />
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text bg-primary">
                        <i class="fa fa-circle-arrow-up text-white"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Descrição do tipo" name="descricao" required="required">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Finalizar</button>
                    <a asp-area="" asp-controller="TipoPagamento" asp-action="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

